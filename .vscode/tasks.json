{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start Orleans Host",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"run"
			],
			"options": {
				"cwd": "${workspaceFolder}/src/Identity.Host"
			},
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Start Identity Gateway",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"run"
			],
			"options": {
				"cwd": "${workspaceFolder}/src/Identity.Gateway"
			},
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Build Solution",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"build"
			],
			"options": {
				"cwd": "${workspaceFolder}/src"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": "$msCompile"
		},
		{
			"label": "Start Both Services",
			"dependsOrder": "sequence",
			"dependsOn": [
				"Start Orleans Host",
				"Start Identity Gateway"
			],
			"group": "build"
		}
	]
}